<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_signin_layout_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="125dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <ImageView
            android:id="@+id/fragment_signin_iv_logo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bestfit_logo"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/fragment_signin_layout_signin"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/fragment_signin_text_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="이메일"
            android:background="@drawable/round_view"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/fragment_signin_text_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:hint="비밀번호"
            android:background="@drawable/round_view"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/fragment_signin_btn_signin"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:text="로그인"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/round_view_btn"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <Button
                android:id="@+id/fragment_signin_btn_signup"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:text="회원가입"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/round_view_btn"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/fragment_signin_tv_goolge_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_signin_btn_signin"
                android:layout_centerInParent="true"
                android:text="@string/google_signin"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>