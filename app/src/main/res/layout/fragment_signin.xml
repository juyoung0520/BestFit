<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/fragment_signin_layout_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_signin_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.bestfit.ClearEditText
                android:id="@+id/fragment_signin_text_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="이메일"
                android:background="@drawable/text_default"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>

        <com.example.bestfit.ClearEditText
            android:id="@+id/fragment_signin_text_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:hint="비밀번호"
            android:background="@drawable/text_default"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/fragment_signin_btn_signin"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:text="로그인"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_default"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <Button
                android:id="@+id/fragment_signin_btn_signup"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:text="회원가입"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_default"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/fragment_signin_tv_goolge_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/google_signin"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>