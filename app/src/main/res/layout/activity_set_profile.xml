<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@drawable/bestfit_set_profile"
            android:layout_marginBottom="50dp"/>

        <ImageView
            android:id="@+id/activity_set_profile_iv"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bestfit_profile" />

        <TextView
            android:id="@+id/activity_set_profile_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/activity_set_profile_edittext_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="이름"
            android:background="@drawable/round_view"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/activity_set_profile_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true">

                <Button
                    android:id="@+id/activity_set_profile_btn_male"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="남자"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/round_view_btn"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/activity_set_profile_tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_set_profile_btn_male"
                    android:text="키"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/activity_set_profile_edittext_height"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/activity_set_profile_tv_height"
                    android:hint="키"
                    android:background="@drawable/round_view"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_set_profile_tv_height"
                    android:layout_alignParentRight="true"
                    android:text="cm"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <Button
                    android:id="@+id/activity_set_profile_btn_female"
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:text="여자"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/round_view_btn"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/activity_set_profile_tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_set_profile_btn_female"
                    android:text="몸무게"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/activity_set_profile_edittext_weight"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/activity_set_profile_tv_weight"
                    android:hint="몸무게"
                    android:background="@drawable/round_view"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_set_profile_tv_weight"
                    android:layout_alignParentRight="true"
                    android:text="kg"
                    android:textColor="@color/colorBlack"

                    android:textStyle="bold"
                    android:layout_marginTop="15dp" />

            </RelativeLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/activity_set_profile_btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="설정 완료"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@drawable/round_view_btn"
            android:layout_marginTop="60dp"/>

    </LinearLayout>

</RelativeLayout>