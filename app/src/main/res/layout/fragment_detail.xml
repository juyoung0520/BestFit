<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_detail_iv_profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/fragment_detail_tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="dubukkingS2"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_detail_tv_user_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="165 cm / 45 kg"
            android:textColor="@color/colorDarkGray"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/fragment_detail_tv_user_detail_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="55 size / 26 in / 245 mm "
            android:textSize="11sp"
            android:textColor="@color/colorDarkGray"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/fragment_detail_layout_item"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/fragment_detail_iv_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_default"/>

        <ImageView
            android:id="@+id/fragment_detail_iv_heart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/image_heart"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_detail_tv_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="브랜드"
        android:textColor="@color/colorDarkGray"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_detail_tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="너의 팬티를 보여줘 SET"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/fragment_detail_tv_item_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIZE 95"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="3dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/fragment_detail_tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 너의 팬티를 보여줘라는 이름처럼 얼른 자랑하고 싶은 팬티네요!! 사이즈도 잘 맞고 다들 얼른 사세요~~~"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

</LinearLayout>