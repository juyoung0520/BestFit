<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/fragment_detail_tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상품 정보"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/fragment_detail_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:orientation="horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/fragment_detail_iv_profile"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/fragment_detail_tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_detail_tv_user_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorDarkGray"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/fragment_detail_tv_user_detail_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorDarkGray"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/fragment_detail_layout_item"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/fragment_detail_iv_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_default"/>

                <ImageView
                    android:id="@+id/fragment_detail_iv_heart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/image_heart"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/fragment_detail_tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="브랜드"
                android:textColor="@color/colorDarkGray"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/fragment_detail_tv_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="너의 팬티를 보여줘 SET"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/fragment_detail_tv_item_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIZE 95"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/fragment_detail_group_size_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <Button
                    android:id="@+id/fragment_detail_btn_s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="작음"
                    style="@style/ToggleButton"
                    android:layout_weight="1"
                    android:clickable="false"/>

                <Button
                    android:id="@+id/fragment_detail_btn_m"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="보통"
                    style="@style/ToggleButton"
                    android:layout_weight="1"
                    android:clickable="false"/>

                <Button
                    android:id="@+id/fragment_detail_btn_l"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="큼"
                    style="@style/ToggleButton"
                    android:layout_weight="1"
                    android:clickable="false"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <TextView
                android:id="@+id/fragment_detail_tv_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>