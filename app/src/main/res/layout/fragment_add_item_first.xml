<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddItemActivity">

    <ScrollView
        android:id="@+id/fragment_add_item_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품 카테고리"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false">

                    <AutoCompleteTextView
                        android:id="@+id/fragment_add_item_first_actv_category"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="대분류"
                        android:textSize="15sp"
                        android:background="@drawable/text_default"
                        android:dropDownHeight="300dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/btn_dropdown"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="5dp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/fragment_add_item_first_layout_divider_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.1"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/fragment_add_item_first_layout_sub_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:visibility="gone">

                    <AutoCompleteTextView
                        android:id="@+id/fragment_add_item_first_actv_sub_category"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="소분류"
                        android:textSize="15sp"
                        android:background="@drawable/text_default"
                        android:dropDownHeight="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/btn_dropdown"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="5dp" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품 사진"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/fragment_add_item_first_layout"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/text_default">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/image_add"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragment_add_item_first_recyclerview_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <TextView
                android:id="@+id/fragment_add_item_first_tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="브랜드/쇼핑몰"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"/>

            <AutoCompleteTextView
                android:id="@+id/fragment_add_item_first_actv_brand"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="브랜드/쇼핑몰"
                android:background="@drawable/text_default"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:completionThreshold="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품명"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/fragment_add_item_first_text_item_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="상품명"
                android:background="@drawable/text_default"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />

            <Button
                android:id="@+id/fragment_add_item_first_btn_submit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="다음"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:background="@drawable/btn_default"
                android:layout_marginTop="15dp"
                android:layout_gravity="end" />

            <View
                android:layout_width="match_parent"
                android:layout_height="500dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>