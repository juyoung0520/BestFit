<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 메시지"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDarkGray"
            android:text="구체적인 신체 정보, 좋아하는 옷 스타일, SNS등 자유롭게 입력해주세요."
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/fragment_set_profile_second_text_review"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="프로필 메시지를 입력해주세요 !"
            android:background="@drawable/text_big"
            android:gravity="start"
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="평소 사이즈"-->
<!--            android:textColor="@color/colorBlack"-->
<!--            android:textStyle="bold"-->
<!--            android:layout_marginTop="15dp"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:layout_marginLeft="10dp"-->
<!--            android:layout_marginBottom="10dp"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>

                    <NumberPicker
                        android:id="@+id/fragment_np_height"
                        android:layout_width="100dp"
                        android:layout_height="130dp"
                        android:theme="@style/NumberPickerStyle"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

            </LinearLayout>
            
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/fragment_set_profile_third_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="입력 완료"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/btn_default"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

</RelativeLayout>