<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@drawable/bestfit_set_profile"
            android:layout_marginBottom="50dp"/>

        <ImageView
            android:id="@+id/fragment_set_profile_iv"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bestfit_profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp" />

        <EditText
            android:id="@+id/fragment_set_profile_text_nickname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="닉네임"
            android:background="@drawable/round_view"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/fragment_set_profile_btn_male"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="남자"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/round_view_btn"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/fragment_set_profile_btn_female"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="여자"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/round_view_btn"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/fragment_set_profile_text_age"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="나이"
                    android:inputType="number"
                    android:background="@drawable/round_view"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/fragment_set_profile_tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="키"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/fragment_set_profile_text_height"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:hint="키"
                        android:inputType="number"
                        android:background="@drawable/round_view"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cm"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/activity_set_profile_tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="몸무게"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/fragment_set_profile_text_weight"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:hint="몸무게"
                        android:inputType="number"
                        android:background="@drawable/round_view"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="kg"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/fragment_set_profile_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설정 완료"
        android:textSize="18dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/round_view_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>